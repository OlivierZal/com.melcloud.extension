    "@types/homey": "npm:homey-apps-sdk-v3-types@^0.3.5",
    "@types/node": "^20.12.10",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^15.1.0",
    "homey": "^3.2.4",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  },
  "dependencies": {
    "homey-api": "^3.4.33",
    "source-map-support": "^0.5.21"
  }
