{
  "name": "com.melcloud.extension",
  "version": "22.0.0",
  "description": "Extension for MELCloud Homey App",
  "type": "module",
  "scripts": {
    "build": "npm run prepare && homey app validate --level publish",
    "deploy": "npm run prepare && homey app install",
    "format": "prettier . --check",
    "format:docs": "prettier README.md --ignore-path --write",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "cp homey-api-override.d.ts node_modules/homey-api/assets/types/homey-api.d.ts && npm run format:docs && npm run lint:fix && npm run format:fix",
    "publish": "homey app publish"
  },
  "dependencies": {
    "core-js": "^3.45.1",
    "homey-api": "^3.14.3",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@eslint/css": "^0.11.1",
    "@eslint/js": "^9.36.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.3.0",
    "@html-eslint/eslint-plugin": "^0.47.0",
    "@html-eslint/parser": "^0.47.0",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/homey": "npm:homey-apps-sdk-v3-types@^0.3.12",
    "@types/node": "^24.6.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-package-json": "^0.56.3",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "eslint-plugin-yml": "^1.18.0",
    "jsonc-eslint-parser": "^2.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0"
  }
}
